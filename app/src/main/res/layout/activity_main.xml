<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="30dp"
    android:background="@drawable/homescreen_bimg"
    tools:context=".MainActivity">


    <com.google.android.material.textview.MaterialTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="25dp"
        android:layout_marginVertical="100dp"
        android:text="The best app for your plants"
        android:textColor="@color/mywhite"
        android:textSize="50sp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/home_signupbtn_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/button_shape"
        android:text="Sign up"
        android:textColor="@color/bg_color"
        android:textStyle="bold"
        app:backgroundTint="@color/mywhite" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/home_loginbtn_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:background="@drawable/button_shape"
        android:text="login"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:backgroundTint="@color/bg_color" />

</LinearLayout>