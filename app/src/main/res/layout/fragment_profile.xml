<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#f2f7f5"
    tools:context=".fragments.profileFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/firstlayout_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="#e6eeea"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="My Profile"
                android:textColor="@color/black"
                android:textSize="22sp"
                android:textStyle="bold" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginVertical="10dp"
                android:elevation="10dp"
                android:src="@drawable/profile_img" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="User Name"
                android:textColor="#32612e"
                android:textSize="28sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="7568129604"
                android:textSize="18sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/firstlayout_id"
            android:orientation="vertical">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/editprofile_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/white"
                android:padding="13dp"
                android:text="Edit Profile"
                android:textAlignment="textStart"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:textStyle="bold"
                app:icon="@drawable/editprofile"
                app:iconSize="25dp"
                app:iconTint="@color/bg_color" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/addressbtn_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/white"
                android:padding="13dp"
                android:text="Address"
                android:textAlignment="textStart"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:textStyle="bold"
                app:icon="@drawable/address_icon"
                app:iconSize="25dp"
                app:iconTint="@color/bg_color" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/myordersbtn_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/white"
                android:padding="13dp"
                android:text="My Orders"
                android:textAlignment="textStart"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:textStyle="bold"
                app:icon="@drawable/myorders_icon"
                app:iconSize="25dp"
                app:iconTint="@color/bg_color" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/offersbtn_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/white"
                android:padding="13dp"
                android:text="Offers"
                android:textAlignment="textStart"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:textStyle="bold"
                app:icon="@drawable/offers_icon"
                app:iconSize="25dp"
                app:iconTint="@color/bg_color" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/billingdetailbtn_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/white"
                android:padding="13dp"
                android:text="Billing Details"
                android:textAlignment="textStart"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:textStyle="bold"
                app:icon="@drawable/editprofile"
                app:iconSize="25dp"
                app:iconTint="@color/bg_color" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/privacypolicybtn_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/white"
                android:padding="13dp"
                android:text="privacy policy"
                android:textAlignment="textStart"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:textStyle="bold"
                app:icon="@drawable/privacy_policy_icon"
                app:iconSize="25dp"
                app:iconTint="@color/bg_color" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/helpandsupportbtn_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/white"
                android:padding="13dp"
                android:text="help and support"
                android:textAlignment="textStart"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:textStyle="bold"
                app:icon="@drawable/help_support_icon"
                app:iconSize="25dp"
                app:iconTint="@color/bg_color" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/logoutbtn_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:backgroundTint="@color/white"
                android:padding="13dp"
                android:text="log out"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:textStyle="bold"
                app:icon="@drawable/logout_icon"
                app:iconSize="25dp"
                app:iconTint="@color/bg_color" />

        </LinearLayout>
    </RelativeLayout>

</ScrollView>